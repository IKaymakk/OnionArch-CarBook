@model CarBook.DTO.BannerDtos.BannerCoverDto

@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
@if (TempData["Message"] != null)
{
    @section message
                {
    @await Html.PartialAsync("_message", (string)TempData["Message"])
    }
}
else
{
    @section message
                {
    @await Html.PartialAsync("_message", (string)TempData["Message2"])
    }
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Banner Bilgileri</h4>
                <form asp-controller="Banner" asp-action="UpdateBanner" asp-area="Admin" method="post">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Video Açıklaması</label>
                                <input asp-for="videoDescription" type="text" class="form-control" maxlength="300" />
                            </div>
                            <div class="form-group">
                                <label>Başlık</label>
                                <textarea rows="5" asp-for="title" type="text" class="form-control" maxlength="300"></textarea>
                            </div>
                            <button class="btn btn-primary">Kaydet</button>

                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Video Url</label>
                                <input asp-for="videoUrl" type="text" class="form-control" maxlength="300" id="placement" />
                            </div>

                            <div class="form-group">
                                <label>Açıklama</label>
                                <textarea rows="5" asp-for="description" type="text" class="form-control" maxlength="300" id="placement"></textarea>
                            </div>
                            <input readonly="readonly" type="hidden" asp-for="bannerId">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
