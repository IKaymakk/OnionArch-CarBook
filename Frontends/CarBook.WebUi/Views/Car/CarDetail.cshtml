@{
    ViewData["Title"] = "CarDetail";
    Layout = "~/Views/UILayout/Index.cshtml";

}

<section class="ftco-section ftco-car-details">

    @if (TempData["Message"] != null)
    {
        @section message
    {
        @await Html.PartialAsync("_message", (string)TempData["Message"])
        }
    }
    else
    {
        @section message
    {
        @await Html.PartialAsync("_message", (string)TempData["Message2"])
        }
    }
    @await Component.InvokeAsync("_CarDetailMainVC", new { id = ViewBag.carid })
    <div class="container">
        <div class="row">
            <div class="col-md-12 pills">
                <div class="bd-example bd-example-tabs">
                    <div class="d-flex justify-content-center">
                        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="pills-description-tab" data-toggle="pill" href="#pills-description" role="tab" aria-controls="pills-description" aria-expanded="true">Araç Özellikleri</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="pills-review-tab" data-toggle="pill" href="#pills-review" role="tab" aria-controls="pills-review" aria-expanded="true">Değerlendirmeler</a>
                            </li>
                        </ul>
                    </div>
                    <div class="tab-content" id="pills-tabContent">
                        @await Component.InvokeAsync("_CarDetailFeaturesVC", new { id = ViewBag.carid })
                        @await Component.InvokeAsync("_CarDetailCommentsVC", new { id = ViewBag.carid })
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
