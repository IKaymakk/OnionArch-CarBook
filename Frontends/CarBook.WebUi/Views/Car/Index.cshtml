@model List<CarResultDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}
<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">

            @foreach (var car in Model)
            {


                <div class="col-md-4">
                    <div class="car-wrap rounded ftco-animate">
                        <div class="img rounded d-flex align-items-end" style="background-image: url(@car.CarCoverImageUrl);">
                        </div>
                        <div class="text">
                            <h2 class="mb-0"><a href="car-single.html">@car.BrandName @car.CarModel</a></h2>
                            <div class="d-flex mb-3">
                                <span style="color:black" >#@car.CarId</span>
                                <p class="price ml-auto"> @Convert.ToInt32(@car.Amount)₺ <span>@car.PricingName</span></p>
                            </div>
                            <p class="d-flex mb-0 d-block"><a href="/Reservation/Index/@car.CarId" class="btn btn-primary py-2 mr-1">Hemen Kirala</a> <a href="car-single.html" class="btn btn-secondary py-2 ml-1">Araç Bilgileri</a></p>
                        </div>
                    </div>
                </div>

            }

        </div>

        <@* div class="row mt-5">
