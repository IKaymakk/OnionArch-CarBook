<style>
    .filter-bar {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
        background-color: transparent;
    }

        /* Uzun input */
        .filter-bar input[type="text"] {
            width: 200px;
            padding: 10px;
            margin-right: 10px;
            border-radius: 8px;
            font-size: 16px;
            color: #495057;
            border: 0.5px solid Darkgray;
            transition: border-color 0.2s;
        }

            .filter-bar input[type="text"]:focus {
                border-color: #1089ff;
            }

        /* Diğer input ve select elemanları aynı boyutta */
        .filter-bar select,
        .filter-bar input[type="number"],
        .filter-bar button {
            width: 140px;
            padding: 10px;
            margin-right: 10px;
            border-radius: 8px;
            font-size: 16px;
            color: #fff;
            background-color: #1089ff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 1);
            transition: transform 0.2s, background-color 0.2s;
        }

        .filter-bar button {
            width: 100px !important;
        }

            .filter-bar button:hover {
                transform: scale(1.02);
                background-color: #01d28e;
                color: #fff;
            }

            .filter-bar select:focus,
            .filter-bar button:focus,
            .filter-bar input[type="number"]:focus {
                outline: none;
                border: 2px solid;
                box-shadow: 0 0 10px rgba(0, 0, 0, 1);
                border-color: #1089ff;
            }

        .filter-bar select option {
            padding: 10px;
            color: #333;
        }

            .filter-bar select option:checked {
                background-color: #1089ff;
                color: #fff;
            }
</style>
<div style="margin-left:0.8em" class="filter-bar">
    <input class="form-control" type="text" id="searchInput" placeholder="Araç Ara" />

    <select id="sortDropdown" class="form-control">
        <option value="">Sıralama</option>
        <option value="asc">Fiyat Artan</option>
        <option value="desc">Fiyat Azalan</option>
    </select>

    <select name="bodytype" id="bodyTypeDropdown" class="form-control">
        <option value="">Araç Tipi</option>
        <option value="Sedan">Sedan</option>
        <option value="Hatchback">Hatchback</option>
        <option value="SUV">SUV</option>
        <option value="Coupe">Coupe</option>
        <option value="Station Wagon">Station Wagon</option>
    </select>

    <select name="fuel" id="fuelTypeDropdown" class="form-control">
        <option value="">Yakıt Tipi</option>
        <option value="Benzin">Benzin</option>
        <option value="Dizel">Dizel</option>
        <option value="Hybrid">Hybrid</option>
        <option value="Elektrik">Elektrik</option>
    </select>

    @await Component.InvokeAsync("_CarBrandListVC")
    <input style="width:100px" class="form-control" type="number" id="minKm" placeholder="Min Km" />

    <input style="width:100px" class="form-control" type="number" id="maxKm" placeholder="Max Km" />
    <button id="clearFilters" class="filter-item btn">Temizle</button>
</div>
