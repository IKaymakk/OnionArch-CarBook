@model List<CarBook.DTO.CarPricingsDtos.CarsListForRentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}
<style>
    table {
        overflow-x: hidden; /* Yatay taşmayı engeller */
    }

</style>
<body>



    <section class="ftco-section ftco-cart">
        <div class="container">
            <div class="row">
                <div class="col-md-12 ftco-animate">
                    <div class="car-list">
                        <table class="table">
                            <thead class="thead-primary">
                                <tr class="text-center">
                                    <th>&nbsp;</th>
                                    <th>&nbsp;</th>
                                    <th class="bg-primary heading">Günlük Kiralama Ücreti</th>
                                    <th class="bg-dark heading">Haftalık Kiralama Ücreti</th>
                                    <th class="bg-black heading">Aylık Kiralama Ücreti</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var x in Model)
                                {

                                    <tr class="">
                                        <td class="car-image"><div class="img" style="border-radius:10px;background-image:url(@x.coverImageUrl);"></div></td>
                                        <td class="product-name">
                                            <b>@x.brandName</b>
                                            <p class="mb-0 rated">
                                                <b>@x.model</b>
                                            </p>
                                        </td>

                                        <td class="price">
                                            <p class="btn-custom"><a href="/Reservation/Index/@x.id">Kirala</a></p>
                                            <div class="price-rate">
                                                <h3>
                                                    <span class="num">@x.dailyAmount ₺</span>
                                                    <span class="per">/ Günlük Ücret</span>
                                                </h3>
                                                <span class="subheading">Günlük 300 Km </span>
                                            </div>
                                        </td>

                                        <td class="price">
                                            <p class="btn-custom"><a href="/Reservation/Index/@x.id">Kirala</a></p>
                                            <div class="price-rate">
                                                <h3>
                                                    <span class="num">@x.weeklyAmount ₺</span>
                                                    <span class="per">/ Haftalık Ücret</span>
                                                </h3>
                                                <span class="subheading">Haftalık 2500 Km </span>
                                            </div>
                                        </td>

                                        <td class="price">
                                            <p class="btn-custom"><a href="/Reservation/Index/@x.id">Kirala</a></p>
                                            <div class="price-rate">
                                                <h3>
                                                    <span class="num">@x.monthlyAmount ₺</span>
                                                    <span class="per">/ Aylık Ücret</span>
                                                </h3>
                                                <span class="subheading">Aylık 12500 Km </span>
                                            </div>
                                        </td>
                                    </tr>

                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>


    s

</body>
