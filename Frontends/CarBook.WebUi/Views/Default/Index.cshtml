@model CarBook.DTO.LocationDtos.RentACarLocationDto
@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<style>
    /* Dropdown menü için stil */
    .custom-select {
        color: black; /* Metin rengi */
        background-color: white; /* Arka plan rengi */
        border: 1px solid #ddd; /* Sınır rengi */
    }

        /* Seçenekler için stil */
        .custom-select option {
            color: black; /* Seçeneklerin metin rengi */
            background-color: white; /* Seçeneklerin arka plan rengi */
        }

</style>

<!DOCTYPE html>
<html lang="en">

<!------------------------------------------------------>
@await Component.InvokeAsync("_UILayoutHeadVC")
<!------------------------------------------------------>

<body>

    <!------------------------------------------------------>
    @await Component.InvokeAsync("_UILayoutNavbarVC")
    <!------------------------------------------------------>
    @await Component.InvokeAsync("_DefaultCoverVC")
    <!------------------------------------------------------>
    <section class="ftco-section ftco-no-pt bg-light">
        <div class="container">
            <div class="row no-gutters">
                <div class="col-md-12	featured-top">
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <div class="row no-gutters">
                        <div style="margin-top:3em" class="col-md-4 d-flex align-items-center">
                            <form method="post" class="request-form ftco-animate bg-primary">

                                <h2>Hemen Aracınızı Kiralayın</h2>
                                <div class="form-group">
                                    <label for="" class="label">Teslim Alma Yeri</label>
                                    <select name="locationid" asp-for="LocationId" asp-items="@ViewBag.locations" class="form-control custom-select">
                                        <option value="1">Seçiniz</option>
                                    </select>

                                </div>
                                <div class="d-flex">
                                    <div class="form-group mr-2">
                                        <label for="" class="label">Teslim Alma Tarihi</label>
                                        <input type="text" class="form-control" name="pickdate" id="book_pick_date" placeholder="Date">
                                    </div>
                                    <div class="form-group ml-2">
                                        <label for="" class="label">Teslim Etme Tarihi</label>
                                        <input type="text" class="form-control" name="offdate" id="book_off_date" placeholder="Date">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="" class="label">Teslim Alma Saati</label>
                                    <input type="text" class="form-control" name="picktime" id="time_pick" placeholder="Time">
                                </div>
                                <div class="form-group">
                                    <label for="" class="label">Teslim Etme Saati</label>
                                    <input type="text" class="form-control" name="offtime" placeholder="Time">
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Uygun Araçları Listele" class="btn btn-secondary py-3 px-4">
                                </div>
                            </form>
                        </div>
                        <div class="col-md-8 d-flex align-items-center">
                            <div class="services-wrap rounded-right w-100">
                                <h3 class="heading-section mb-4">Araç Kiralamanın En Kolay Hali</h3>
                                <div class="row d-flex mb-4">
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-route"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">Teslim Alacağınız Yeri Seçin</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-handshake"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">En Uygun Aracı Alın</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-rent"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">Tadını Çıkarın</h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <p><a href="#" class="btn btn-primary py-3 px-4">Reserve Your Perfect Car</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>
    <!------------------------------------------------------>
    @await Component.InvokeAsync("_DefaultLast5CarsVC")
    <!------------------------------------------------------>
    @await Component.InvokeAsync("_AboutUsVC")
    <!------------------------------------------------------>
    @await Component.InvokeAsync("_OurServicesVC")
    <!------------------------------------------------------>
    @await Component.InvokeAsync("_AboutBecomeDriverVC")
    <!------------------------------------------------------>
    @await Component.InvokeAsync("_TestimonialsVC")
    <!------------------------------------------------------>
    @await Component.InvokeAsync("_LastRecent3BlogsVC")
    <!------------------------------------------------------>
    @await Component.InvokeAsync("_DefaultStatsVC")
    <!------------------------------------------------------>
    @await Component.InvokeAsync("_UILayoutFooterVC")


</body>
</html>

