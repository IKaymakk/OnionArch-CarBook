@model CarBook.DTO.LocationDtos.RentACarLocationDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="col-md-12 block-9 mb-mbd-5">
    <form class="bg-light p-5 contact-form" method="post">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Kiralamak İstediğiniz Araç" />
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Adınız" />
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Soyadınız" />
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Mail Adresiniz" />
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Telefon Numaranız" />
        </div>
        <div class="form-group">
            <select name="locationid" asp-for="LocationId" asp-items="@ViewBag.locations" class="form-control custom-select">
                <option value="1">Aracı Teslim Alma Yeri</option>
            </select>
        </div>
        <div class="form-group">
            <select name="locationid" asp-for="LocationId" asp-items="@ViewBag.locations" class="form-control custom-select">
                <option value="1">Aracı Teslim Etme Yeri</option>
            </select>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Yaşınız" />
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Sürücü Belgesi Geçerlilik Yılı" />
        </div>
    </form>
</div>

