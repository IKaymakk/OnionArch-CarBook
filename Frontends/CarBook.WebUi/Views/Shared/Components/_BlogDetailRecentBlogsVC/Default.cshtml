@model List<CarBook.DTO.BlogDtos.RecentBlogsDto>
<div class="sidebar-box ftco-animate">
    <h3>En Yeni 3 Blog</h3>

    @foreach(var x in Model)
    {
    <div style="min-height:400px;max-height:600px" class="block-21 mb-4 d-flex">
        <a class="blog-img mr-4" style="background-image: url(@x.CoverImageUrl);"></a>
        <div class="text">
            <h3 class="heading"><a href="#">@x.Title</a></h3>
            <div class="meta">
                <div><a href="#"><span class="icon-calendar"></span>@x.CreatedDate.ToShortDateString()</a></div>
                <div><a href="#"><span class="icon-person"></span>@x.AuthorName</a></div>
                <div><a href="#"><span class="icon-chat"></span></a></div>
            </div>
        </div>
    </div>
    }

</div>