@model List<CarBook.DTO.CarFeaturesDtos.CarDetailFeaturesDto>
<div class="container">
    <div class="row">
        <div class="col-md-12 pills">
            <div class="bd-example bd-example-tabs">
                <div class="d-flex justify-content-center">
                    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">

                        <li class="nav-item">
                            <a class="nav-link active" id="pills-description-tab" data-toggle="pill" href="#pills-description" role="tab" aria-controls="pills-description" aria-expanded="true">Araç Özellikleri</a>
                        </li>
                    </ul>
                </div>
                <div class="tab-content" id="pills-tabContent">





                    <div class="tab-pane fade show active" id="pills-description" role="tabpanel" aria-labelledby="pills-description-tab">

                        <div class="row">

                            @foreach (var item in Model)

                            {

                                <div class="col-md-4">

                                    <ul class="features">

                                            <li class="check"><span class="ion-ios-checkmark"></span>@item.featureName</li>



                                    </ul>

                                </div>

                            }

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>