@model IEnumerable<CarBook.DTO.BlogDtos.AdminBlogListDto>
<div class="col-xl-6">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">Son Yazılan 5 Blog</h4>

            <div class="table-responsive">
                <table class="table table-borderless table-hover table-centered table-nowrap mb-0">
                    <tbody>
                        @foreach (var x in Model)
                        {

                            <tr>
                                <td>
                                    <a href="/Blog/BlogDetail/@x.BlogId">

                                        <h5 class="font-size-15 mb-1 font-weight-normal">
                                            @x.Title.Substring(0, 15)
                                            ...
                                        </h5>
                                    </a>

                                </td>
                                <td>
                                    <a href="/Blog/BlogDetail/@x.BlogId">
                                        <h5 class="font-size-15 mb-1 font-weight-normal">
                                            @x.CategoryName
                                        </h5>
                                    </a>

                                </td>
                                <td>
                                    <a href="/Blog/BlogDetail/@x.BlogId">

                                        <h5 class="font-size-15 mb-1 font-weight-normal">
                                            @x.AuthorName @x.AuthorSurname
                                        </h5>
                                    </a>

                                </td>
                                <td>
                                    <a href="/Blog/BlogDetail/@x.BlogId">

                                        <h5 class="font-size-15 mb-1 font-weight-normal">@x.CreatedDate.ToShortDateString() </h5>
                                    </a>
                                </td>
                            </tr>


                        }

                    </tbody>
                </table>
            </div>

        </div> <!-- end card-body-->
    </div> <!-- end card-->
</div> <!-- end col -->
