@model List<CarBook.DTO.BlogDtos.RecentBlogsDto>

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <span class="subheading">Blog</span>
                <h2>En Yeni 3 Blog</h2>
            </div>
        </div>
        <div class="row d-flex">

            @foreach (var blog in Model)
            {
                <div class="col-md-4 d-flex ftco-animate">
                    <div class="blog-entry">
                        <a href="blog-single.html" class="block-20" style="background-image: url('@blog.CoverImageUrl');"></a>
                        <div class="text pt-4">
                            <div class="meta mb-3">
                                <div><a href="#">@blog.CreatedDate.ToShortDateString()</a></div>
                                <div><a href="#">@blog.AuthorName</a></div>
                                <div><a href="#" class="meta-chat"><span class="icon-chat"></span>0</a></div>
                            </div>
                            <h3 class="heading mt-2"><a href="#">@blog.Title</a></h3>
                            <p><a href="/Blog/BlogDetail/@blog.BlogId" class="btn btn-primary">Devamını Oku</a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<style>
    /* Blog kartlarının konteyneri */
    .blog-entry {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        border: 1px solid #e1e1e1;
        border-radius: 8px;
        overflow: hidden;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease-in-out;
    }

        /* Blog kartının üzerine gelince büyüme efekti */
        .blog-entry:hover {
            transform: translateY(-5px);
        }

    /* Resim alanı */
    .block-20 {
        height: 250px;
        background-size: cover;
        background-position: center;
    }

    /* Blog kartının içeriği */
    .text {
        padding: 15px;
        display: flex;
        flex-direction: column;
    }

    .meta {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        gap: 10px; /* Elemanlar arasındaki boşluğu ayarlar */
        margin-bottom: 0; /* Alt taraftaki ekstra boşlukları kaldırır */
    }

        .meta div {
            margin: 0; /* Elemanların kendi içindeki boşlukları sıfırlar */
        }


    /* Başlık */
    .heading {
        font-size: 18px;
        font-weight: bold;
        margin: 10px 0;
        color: #333;
    }

    /* "Devamını Oku" butonu */
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        padding: 10px 20px;
        font-size: 14px;
        display: inline-block;
        margin-top: auto;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

</style>